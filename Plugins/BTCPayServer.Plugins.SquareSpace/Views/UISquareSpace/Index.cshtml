@model BTCPayServer.Plugins.Squarespace.Models.SquarespaceSettings
@{
    ViewData["Title"] = "Squarespace Integration";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-xxl-constrain col-xl-8">
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted">
            Accept Bitcoin payments for your Squarespace store using BTCPay Server.
        </p>

        @if (TempData.ContainsKey("SuccessMessage"))
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                @TempData["SuccessMessage"]
            </div>
        }

        <form method="post" asp-action="UpdateSettings">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="OAuthToken" class="form-label"></label>
                <input asp-for="OAuthToken" class="form-control" type="password" />
                <span asp-validation-for="OAuthToken" class="text-danger"></span>
                <div class="form-text">
                    Your Squarespace OAuth token. 
                    <a href="https://developers.squarespace.com/oauth" target="_blank">Learn how to create one</a>.
                    Requires permissions for: <code>website.orders.read</code>, <code>website.orders.write</code>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="WebsiteId" class="form-label"></label>
                <input asp-for="WebsiteId" class="form-control" />
                <span asp-validation-for="WebsiteId" class="text-danger"></span>
                <div class="form-text">
                    Your Squarespace website ID. Find this in your Squarespace admin under Settings > Advanced.
                </div>
            </div>

            <div class="form-group">
                <label asp-for="WebhookEndpointUrl" class="form-label"></label>
                <input asp-for="WebhookEndpointUrl" class="form-control" readonly />
                <div class="form-text">
                    This is the webhook URL that Squarespace will call when orders are created. 
                    It's automatically generated and registered.
                </div>
            </div>

            <hr class="my-4" />

            <h4>Invoice Settings</h4>

            <div class="form-check">
                <input asp-for="AutoCreateInvoices" class="form-check-input" type="checkbox" />
                <label asp-for="AutoCreateInvoices" class="form-check-label"></label>
                <div class="form-text">
                    Automatically create BTCPay invoices when new orders are placed on Squarespace.
                </div>
            </div>

            <div class="form-group mt-3">
                <label asp-for="InvoiceExpirationMinutes" class="form-label"></label>
                <input asp-for="InvoiceExpirationMinutes" class="form-control" type="number" min="1" max="1440" />
                <span asp-validation-for="InvoiceExpirationMinutes" class="text-danger"></span>
                <div class="form-text">
                    How long customers have to pay before the invoice expires (1-1440 minutes).
                </div>
            </div>

            <div class="form-group">
                <label asp-for="OrderStatusAfterPayment" class="form-label"></label>
                <select asp-for="OrderStatusAfterPayment" class="form-select">
                    <option value="FULFILLED">Mark as Fulfilled</option>
                    <option value="PENDING">Keep as Pending</option>
                </select>
                <div class="form-text">
                    What should happen to the Squarespace order after payment is confirmed?
                </div>
            </div>

            <hr class="my-4" />

            <h4>Advanced</h4>

            <div class="form-group">
                <label asp-for="WebhookSubscriptionId" class="form-label"></label>
                <input asp-for="WebhookSubscriptionId" class="form-control" readonly />
                <div class="form-text">
                    The ID of the webhook subscription on Squarespace (auto-managed).
                </div>
            </div>

            <div class="form-group">
                <label asp-for="WebhookSecret" class="form-label"></label>
                <input asp-for="WebhookSecret" class="form-control" type="password" readonly />
                <div class="form-text">
                    The secret used to verify webhook signatures (auto-managed).
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Save Settings</button>
        </form>

        <hr class="my-5" />

        <h4>How It Works</h4>
        <ol>
            <li>Customer places an order on your Squarespace store</li>
            <li>Squarespace sends a webhook to BTCPay Server</li>
            <li>BTCPay automatically creates a Bitcoin invoice</li>
            <li>Customer pays the invoice with Bitcoin</li>
            <li>BTCPay automatically marks the Squarespace order as fulfilled</li>
        </ol>

        <h4 class="mt-4">Setup Instructions</h4>
        <ol>
            <li>
                <strong>Create a Squarespace OAuth App:</strong>
                <ul>
                    <li>Go to <a href="https://developers.squarespace.com/" target="_blank">Squarespace Developers</a></li>
                    <li>Create a new OAuth app</li>
                    <li>Request scopes: <code>website.orders.read</code> and <code>website.orders.write</code></li>
                    <li>Complete the OAuth flow to get your access token</li>
                </ul>
            </li>
            <li>
                <strong>Configure This Plugin:</strong>
                <ul>
                    <li>Paste your OAuth token above</li>
                    <li>Enter your Squarespace website ID</li>
                    <li>Configure invoice settings as desired</li>
                    <li>Click "Save Settings"</li>
                </ul>
            </li>
            <li>
                <strong>Test the Integration:</strong>
                <ul>
                    <li>Place a test order on your Squarespace store</li>
                    <li>Check that a BTCPay invoice was created automatically</li>
                    <li>Pay the invoice and verify the order status updates</li>
                </ul>
            </li>
        </ol>

        <div class="alert alert-info mt-4">
            <h5>Important Notes</h5>
            <ul class="mb-0">
                <li>Your BTCPay Server must be accessible from the internet for webhooks to work</li>
                <li>HTTPS is required for webhook endpoints</li>
                <li>You may need to send payment instructions to customers manually or via email</li>
                <li>Consider adding a custom message to your Squarespace checkout explaining Bitcoin payment</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
