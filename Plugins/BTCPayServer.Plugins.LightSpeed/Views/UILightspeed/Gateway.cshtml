@{
    Layout = null;
    var invoiceId = ViewBag.InvoiceId as string;
    var invoiceUrl = ViewBag.InvoiceUrl as string;
    var eventsUrl = ViewBag.EventsUrl as string;
    var origin = ViewBag.Origin as string;
    var amount = ViewBag.Amount;
    var currency = ViewBag.Currency as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bitcoin Payment</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background: #f8f9fa;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 16px;
        }

        .card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.1);
            padding: 24px;
            width: 100%;
            max-width: 420px;
            text-align: center;
        }

        h2 {
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 4px;
        }

        .amount {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 20px;
        }

        #btcpay-frame {
            width: 100%;
            height: 460px;
            border: none;
            border-radius: 8px;
        }

        .status-msg {
            margin-top: 16px;
            padding: 12px;
            border-radius: 8px;
            font-weight: 600;
            display: none;
        }

            .status-msg.success {
                background: #d1fae5;
                color: #065f46;
                display: block;
            }

            .status-msg.error {
                background: #fee2e2;
                color: #991b1b;
                display: block;
            }
    </style>
</head>
<body>
    <div class="card">
        <h2>Pay with Bitcoin</h2>
        <div class="amount">@amount @currency</div>
        <iframe id="btcpay-frame" src="@invoiceUrl" allowtransparency="true" title="Bitcoin Payment"></iframe>
        <div id="status-msg" class="status-msg"></div>
    </div>

    <script>
        const LIGHTSPEED_ORIGIN = "@origin";
        const EVENTS_URL = "@eventsUrl";
        let finalised = false;
        let sse  = null;

        function showMessage(msg, type) {
            const el = document.getElementById("status-msg");
            el.textContent = msg;
            el.className = "status-msg " + type;
        }

        function sendToLightspeed(payload) {
            window.parent.postMessage(JSON.stringify(payload), LIGHTSPEED_ORIGIN);
        }

        function accept() {
            if (finalised) return;
            finalised = true;
            closeSSE();
            showMessage("Payment confirmed", "success");
            setTimeout(() => sendToLightspeed({ step: "ACCEPT" }), 1200);
        }

        function decline(reason) {
            if (finalised) return;
            finalised = true;
            closeSSE();
            showMessage(reason || "Payment expired or cancelled", "error");
            setTimeout(() => sendToLightspeed({ step: "DECLINE" }), 2000);
        }

        window.addEventListener("message", (event) => {
            let msg;
            try {
                msg = typeof event.data === "string" ? JSON.parse(event.data) : event.data;
            } catch { return; }

            if (msg?.step === "DATA") return;

            const status = (msg?.status ?? msg?.invoice?.status ?? "").toLowerCase();
            if (status === "settled") {
                accept();
            } else if (status === "expired" || status === "invalid") {
                decline("Payment expired.");
            }
        });

        function openSSE() {
            sse = new EventSource(EVENTS_URL);
            sse.addEventListener("settled", () => accept());
            sse.addEventListener("failed",  () => decline("Payment expired."));
            sse.onerror = () => { if (finalised) closeSSE(); };
        }

        function closeSSE() {
            if (sse) { sse.close(); sse = null; }
        }

        sendToLightspeed({ step: "DATA" });
        openSSE();
    </script>
</body>
</html>
