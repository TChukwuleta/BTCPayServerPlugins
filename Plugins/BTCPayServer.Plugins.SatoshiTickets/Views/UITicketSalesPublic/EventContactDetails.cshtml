@using BTCPayServer.Plugins.SatoshiTickets.Data
@using BTCPayServer.Plugins.SatoshiTickets.ViewModels
@using System.Globalization
@model ContactInfoPageViewModel
@{
    Layout = "_BaseSimpleTicketPublicLayout";
}

<div class="container py-4">
    <h4 class="fw-bold text-center mb-4">@Model.EventTitle</h4>
    <nav aria-label="breadcrumb" class="mt-5 mb-4 py-3 ps-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="EventTicket" asp-route-storeId="@Model.StoreId" asp-route-eventId="@Model.EventId">Event Ticket</a></li>
            <li class="breadcrumb-item active" aria-current="page">CONTACT DETAILS</li>
        </ol>
    </nav>

    <div class="row">
        <form asp-action="SaveContactDetails" asp-route-storeId="@Model.StoreId" asp-route-eventId="@Model.EventId" method="post">
            <input type="hidden" asp-for="EventId" />

            <div class="row">
                <div class="col-md-8">
                    <div class="d-flex mb-2">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                <i class="bi bi-check"></i>
                            </div>
                            <span class="ms-2 text-success fw-bold">Tickets</span>
                            <hr class="flex-grow-1 mx-3">
                        </div>
                        <div class="flex-grow-1 d-flex align-items-center">
                            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                <i class="bi bi-check"></i>
                            </div>
                            <span class="ms-2 text-success fw-bold">Contact</span>
                            <hr class="flex-grow-1 mx-3">
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle border d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                <span class="text-muted">3</span>
                            </div>
                            <span class="ms-2 text-muted">Payment</span>
                        </div>
                    </div>

                    @if (Model.ContactInfo.Count > 1)
                    {
                        <div class="mb-4 mt-4">
                            <label class="form-label fw-bold">Who should receive the tickets?</label>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ticketDeliveryOption" id="sendToMe" value="me" checked>
                                <label class="form-check-label" for="sendToMe">
                                    Send all tickets to me
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ticketDeliveryOption" id="sendIndividually" value="individual">
                                <label class="form-check-label" for="sendIndividually">
                                    Send tickets individually to different people
                                </label>
                            </div>
                        </div>
                    }

                    <div class="p-3 rounded mb-4">
                        <div id="contactList">
                            @for (var i = 0; i < Model.ContactInfo.Count; i++)
                            {
                                <div class="contact-group mb-4" data-index="@i">
                                    <h6 class="fw-bold mb-3 ticket-heading" data-ticket-type="@Model.ContactInfo[i].TicketTypeName"> </h6>
                                    <input type="hidden" asp-for="ContactInfo[i].TicketTypeId" />
                                    <input type="hidden" asp-for="ContactInfo[i].TicketTypeName" />
                                    <input type="hidden" asp-for="ContactInfo[i].Quantity" />

                                    <div class="mb-3">
                                        <label class="form-label" data-required>First name</label>
                                        <input type="text" class="form-control contact-required" asp-for="ContactInfo[i].FirstName" placeholder="First name" required>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" data-required>Last name</label>
                                        <input type="text" class="form-control contact-required" asp-for="ContactInfo[i].LastName" placeholder="Last name" required>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" data-required>Email Address</label>
                                        <input type="email" class="form-control contact-required" asp-for="ContactInfo[i].Email" placeholder="Email address" required>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
                <input type="hidden" name="txnId" value="@Model.TxnId" />

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold mb-4">Summary <span class="text-muted small">(in @Model.Currency)</span></h5>
                            <h6 class="text-center fw-bold mb-4">@Model.EventTitle</h6>
                            @foreach (var ticket in Model.Tickets)
                            {
                                <div class="d-flex justify-content-between mb-3">
                                    <span>@ticket.Quantity × @ticket.TicketTypeName</span>
                                    <span>@((ticket.Quantity * ticket.Price).ToString("N0"))</span>
                                </div>
                            }
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Subtotal</span>
                                <span>@Model.Tickets.Sum(t => t.Quantity * t.Price).ToString("N0")</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="fw-bold">Total</span>
                                <span class="fw-bold">@Model.Tickets.Sum(t => t.Quantity * t.Price).ToString("N0")</span>
                            </div>
                            <button id="complete-payment-btn" type="submit" class="btn btn-success w-100 py-3" disabled>Complete Payment</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section PageFootContent {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const submitButton = document.getElementById('complete-payment-btn');
            const contactGroups = document.querySelectorAll('.contact-group');
            const sendToMe = document.getElementById('sendToMe');
            const sendIndividually = document.getElementById('sendIndividually');

            function updateVisibility() {
                const isIndividual = sendIndividually && sendIndividually.checked;
                const hasMultiple = contactGroups.length > 1;

                contactGroups.forEach((group, index) => {
                    const heading = group.querySelector('.ticket-heading');
                    const ticketType = heading.dataset.ticketType;

                    if (!hasMultiple) {
                        heading.style.display = 'none';
                    }
                    else if (!isIndividual) {
                        // Send all to me → show one "Tickets"
                        if (index === 0) {
                            heading.textContent = 'Tickets';
                            heading.style.display = 'block';
                        } else {
                            heading.style.display = 'none';
                        }
                    }
                    else {
                        // Send individually
                        heading.textContent = `Ticket ${index + 1} (${ticketType})`;
                        heading.style.display = 'block';
                    }

                    // Toggle form visibility
                    if (isIndividual) {
                        group.style.display = 'block';
                        setRequired(group, true);
                    } else {
                        if (index === 0) {
                            group.style.display = 'block';
                            setRequired(group, true);
                        } else {
                            group.style.display = 'none';
                            setRequired(group, false);
                        }
                    }
                });

                validate();
            }

            function setRequired(group, required) {
                group.querySelectorAll('input[type="text"], input[type="email"]')
                    .forEach(i => i.required = required);
            }

            function validate() {
                const visibleInputs = Array.from(contactGroups)
                    .filter(g => g.style.display !== 'none')
                    .flatMap(g => Array.from(g.querySelectorAll('input[required]')));

                submitButton.disabled = !visibleInputs.every(i => i.value.trim() !== '');
            }

            document.querySelectorAll('.contact-required')
                .forEach(i => i.addEventListener('input', validate));

            if (sendToMe) sendToMe.addEventListener('change', updateVisibility);
            if (sendIndividually) sendIndividually.addEventListener('change', updateVisibility);

            updateVisibility();
        });
    </script>

}
