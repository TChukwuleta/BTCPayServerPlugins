@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Abstractions.Models
@using BTCPayServer.Plugins.StoreBridge.ViewModels
@model ImportViewModel
@{
    Layout = "_Layout";
    ViewData.SetLayoutModel(new LayoutModel("StoreBridge-Import", "Shopify Bridge - Export") { ActiveCategory = "StoreBridge" });
}

<header class="text-center">
    <h1>@ViewData["Title"]</h1>
    <p class="lead text-secondary mt-3">Import a store configuration from another BTCPay Server instance</p>
</header>

<div class="row justify-content-center mt-4">
    <div class="col-xxl-8 col-xl-10">
        <form method="post" asp-action="ImportStore" enctype="multipart/form-data">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Upload Export File</h5>

                    @* <div class="mb-4 mt-3">
                        <label for="importFile" class="form-label">Store Export File (JSON)</label>
                        <input type="file" class="form-control" id="importFile" name="importFile"
                               accept=".json" required />
                        <div class="form-text">
                            Select the JSON file exported from another BTCPay Server instance
                        </div>
                        <span asp-validation-for="importFile" class="text-danger"></span>
                    </div> *@

                    <hr class="my-4" />

                    <h5 class="card-title">Import Options</h5>

                    <div class="form-check mb-3 mt-3">
                        <input class="form-check-input" type="checkbox" id="importWallets"
                               asp-for="Options.ImportWallets" checked />
                        <label class="form-check-label" for="importWallets">
                            <strong>Import Wallets</strong>
                            <div class="form-text">Import wallet configurations (xpubs only)</div>
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="importPaymentMethods"
                               asp-for="Options.ImportPaymentMethods" checked />
                        <label class="form-check-label" for="importPaymentMethods">
                            <strong>Import Payment Methods</strong>
                            <div class="form-text">Import payment method configurations</div>
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="importWebhooks"
                               asp-for="Options.ImportWebhooks" checked />
                        <label class="form-check-label" for="importWebhooks">
                            <strong>Import Webhooks</strong>
                            <div class="form-text">Import webhook configurations including secrets</div>
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="importUsers"
                               asp-for="Options.ImportUsers" />
                        <label class="form-check-label" for="importUsers">
                            <strong>Import Users</strong>
                            <div class="form-text">
                                Add store users (users must already exist on this server)
                                <span class="badge bg-warning text-dark ms-2">Use with caution</span>
                            </div>
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="importApps"
                               asp-for="Options.ImportApps" checked />
                        <label class="form-check-label" for="importApps">
                            <strong>Import Apps</strong>
                            <div class="form-text">Import Point of Sale, Crowdfund, and other apps</div>
                        </label>
                    </div>

                    <hr class="my-4" />

                    <h5 class="card-title">Store Naming</h5>

                    <div class="mb-3 mt-3">
                        <label for="newStoreName" class="form-label">New Store Name (optional)</label>
                        <input type="text" class="form-control" id="newStoreName"
                               asp-for="Options.NewStoreName"
                               placeholder="Leave empty to keep original name" />
                        <div class="form-text">
                            Customize the name for the imported store
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <i class="fa fa-info-circle me-2"></i>
                        <strong>What happens during import:</strong>
                        <ul class="mb-0 mt-2">
                            <li>A new store will be created with the imported configuration</li>
                            <li>You will be added as the store owner</li>
                            <li>Wallet xpubs will be imported (you may need to configure Lightning separately)</li>
                            <li>All changes can be reviewed and modified after import</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning mt-3" role="alert">
                        <i class="fa fa-exclamation-triangle me-2"></i>
                        <strong>Important:</strong> Private keys and Lightning node credentials must be manually configured after import. The export only contains public keys and configuration settings.
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-upload me-2"></i>
                            Import Store
                        </button>
                        <a asp-controller="UIStores" asp-action="ListStores" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
