@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Abstractions.Models
@using BTCPayServer.Plugins.StoreBridge.ViewModels
@inject IScopeProvider ScopeProvider
@model ImportViewModel
@{
    Layout = "_Layout";
    var storeId = ScopeProvider.GetCurrentStoreId();
    ViewData.SetLayoutModel(new LayoutModel("StoreBridge-Import", "Store Bridge - Import") { ActiveCategory = "StoreBridge" });
}

<div class="sticky-header d-flex justify-content-between align-items-center">
    <h2>@ViewData["Title"]</h2>
    @if (Model.ShowPreview)
    {
        <div class="d-flex gap-2">
            <button type="submit" form="importConfirmForm" class="btn btn-primary">Confirm import</button>
            <a asp-action="ImportStore" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>

<partial name="_StatusMessage" />

@if (!Model.ShowPreview)
{
    <div class="row">
        <div class="col-xl-8 col-xxl-constrain">
            <p class="text-muted mb-4">Upload a BTCPay store export file to import configuration into this store</p>
            <form method="post" asp-action="ImportStorePreview" asp-route-storeId="@storeId" enctype="multipart/form-data">
                <input type="hidden" asp-for="StoreId" />
                <div class="mb-4">
                    <label asp-for="ImportFile" class="form-label">Import file</label>
                    <input asp-for="ImportFile" type="file" class="form-control" accept=".storebridge" required />
                    <div class="form-text">Only .storebridge files are supported (max 1 MB)</div>
                </div>
                <button type="submit" class="btn btn-primary">Next: preview import</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="row fs-5">
        <div class="col-xl-8 col-xxl-constrain">
            <div class="mb-5">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted fw-normal">Source BTCPay Server instance:</dt>
                    <dd class="col-sm-8">@Model.ExportedFrom</dd>

                    <dt class="col-sm-4 text-muted fw-normal">Source Store name:</dt>
                    <dd class="col-sm-8">@Model.OriginalStoreName</dd>

                    <dt class="col-sm-4 text-muted fw-normal">Date of export:</dt>
                    <dd class="col-sm-8">@Model.FormattedExportDate</dd>
                </dl>
            </div>

            <hr class="my-4" />

            <form method="post" asp-action="ImportStoreConfirm" asp-route-storeId="@storeId" id="importConfirmForm">
                <input type="hidden" asp-for="StoreId" />

                <div class="d-flex justify-content-between align-items-end mb-3">
                    <div>
                        <h5 class="mb-1">Import options</h5>
                        <p class="text-muted mb-0">Choose which settings you want to import into this store</p>
                    </div>
                    <small class="text-muted">
                        <span id="selectedCount">@Model.SelectedCount</span> / @Model.AvailableCount selected
                    </small>
                </div>

                <p class="text-muted small mb-4">
                    <strong>Note:</strong> Importing will overwrite existing configuration for the selected options.
                    Payment methods, webhooks, and apps will be merged. Other store settings will be replaced.
                </p>

                @foreach (var option in Model.AvailableOptions)
                {
                    var metadata = ImportViewModel.OptionMetadata[option];
                    var isChecked = Model.IsSelected(option);

                    <div class="form-check form-switch mb-3">
                        <input class="btcpay-toggle me-3 import-toggle" type="checkbox" name="SelectedOptions" 
                            value="@option" id="import@option" checked="@isChecked" />

                        <label class="form-check-label" for="import@option">
                            <div class="fw-semibold">@metadata.Title</div>
                            <div class="text-muted small">@metadata.Description</div>
                        </label>
                    </div>
                }
            </form>
        </div>
    </div>
}

@section PageFootContent {
    @if (Model.ShowPreview)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const toggles = document.querySelectorAll('.import-toggle');
                const selectedCount = document.getElementById('selectedCount');
                function updateCount() {
                    const count = document.querySelectorAll('.import-toggle:checked').length;
                    selectedCount.textContent = count;
                }
                toggles.forEach(t => t.addEventListener('change', updateCount));
                updateCount();
            });
        </script>
    }
}